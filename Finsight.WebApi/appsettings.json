{
  "Jwt": {
    "AuthToken": "",
    "Issuer": "Finsight.WebApi",
    "Audience": "Finsight.Client",
    "TokenLifetimeMinutes": 60
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=Finsight;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Debug"
    }
  },
  "DetailedErrors": true,
  "AllowedHosts": "*",
  "OrderDocuments": {
    "RootPath": "OrderDocuments",
    "AllowedExtensions": [
      ".pdf",
      ".xls",
      ".xlsx",
      ".doc",
      ".docx"
    ]
  }
}