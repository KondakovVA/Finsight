<UserControl x:Class="Finsight.Client.Scenarios.Orders.Card.OrderCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ph="clr-namespace:Finsight.Client.AppFrame.CustomControls"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:enum="clr-namespace:Finsight.Client.Extensions"
             xmlns:conv="clr-namespace:Finsight.Client.Converters"
             xmlns:contract="clr-namespace:Finsight.Contract.Enum;assembly=Finsight.Contract"
             mc:Ignorable="d"
             Width="520"
             Height="620"
             d:DesignHeight="920"
             d:DesignWidth="520">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/AppFrame/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/AppFrame/Styles/TextBox.xaml"/>
                <ResourceDictionary Source="/AppFrame/Styles/TextBlock.xaml"/>
                <ResourceDictionary Source="/AppFrame/Styles/ComboBox.xaml"/>
                <ResourceDictionary Source="/AppFrame/Styles/UIColors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <conv:BoolToColorConverter x:Key="BoolToColor"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer Padding="20"
                  Background="{StaticResource MainBackgroundBrush}"
                  VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--Заголовок-->
            <Grid Grid.Row="0"
                  Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <fa:ImageAwesome Grid.Column="0"
                                  Icon="Cubes"
                                  Width="34"
                                  Foreground="Black"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding Title}"
                           Style="{StaticResource BaseTextBlock}"
                           FontSize="24"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>
            </Grid>
            <!--Клиент-->
            <StackPanel Grid.Row="1"
                        Margin="0,0,0,15">
                <TextBlock Text="Клиент"
                           Margin="0,0,0,5"
                           FontSize="13"
                           FontFamily="Montserrat"
                           Foreground="DimGray"/>
                <ph:SearchableComboBox ItemsSource="{Binding Customers}"
                                       SelectedItem="{Binding SelectedCustomer}"
                                       DisplayMemberPath="CompanyName"
                                       Width="Auto"
                                       Height="35"/>
            </StackPanel>
            <!--Исполнитель-->
            <StackPanel Grid.Row="2"
                        Margin="0,0,0,15">
                <TextBlock Text="Исполнитель"
                           Margin="0,0,0,5"
                           FontSize="13"
                           FontFamily="Montserrat"
                           Foreground="DimGray"/>
                <ph:SearchableComboBox ItemsSource="{Binding Executors}"
                                       SelectedItem="{Binding SelectedExecutor}"
                                       DisplayMemberPath="DisplayName"
                                       Width="Auto"
                                       Height="35"/>
            </StackPanel>
            <!--Статус-->
            <StackPanel Grid.Row="3"
                        Margin="0,0,0,15">
                <TextBlock Text="Статус"
                           Margin="0,0,0,5"
                           FontSize="13"
                           FontFamily="Montserrat"
                           Foreground="DimGray"/>
                <ComboBox ItemsSource="{enum:EnumLocalization {x:Type contract:OrderStatus}}"
                                       SelectedValue="{Binding Status}"
                                       SelectedValuePath="Value"
                                       DisplayMemberPath="Display"
                                       Height="35"
                                       IsEnabled="{Binding IsEditMode}"
                                       Style="{StaticResource ComboBoxCard}"/>
            </StackPanel>
            <!--Дата исполнения заказа-->
            <StackPanel Grid.Row="4"
                        Margin="0,0,0,15">
                <TextBlock Text="Дата исполнения заказа"
                           Margin="0,0,0,5"
                           FontSize="13"
                           FontFamily="Montserrat"
                           Foreground="DimGray"/>
                <DatePicker SelectedDate="{Binding ExpireDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Height="35"
                            Width="Auto"/>
            </StackPanel>
            <!--Стоимость-->
            <StackPanel Grid.Row="5"
                        Margin="0,0,0,15">
                <TextBlock Text="Стоимость, руб."
                           Margin="0,0,0,5"
                           FontSize="13"
                           FontFamily="Montserrat"
                           Foreground="DimGray"/>
                <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"
                         Style="{StaticResource WatermarkTxtBox}"
                         Tag="0"/>
            </StackPanel>
            <!--Описание-->
            <StackPanel Grid.Row="6"
                        Margin="0,0,0,15">
                <TextBlock Text="Описание"
                           Margin="0,0,0,5"
                           FontSize="13"
                           FontFamily="Montserrat"
                           Foreground="DimGray"/>
                <TextBox Text="{Binding Description}"
                         Height="80"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Style="{StaticResource WatermarkTxtBox}"
                         Tag="Описание заказа"/>
            </StackPanel>
            <!--Комментарий-->
            <StackPanel Grid.Row="7"
                        Margin="0,0,0,15">
                <TextBlock Text="Комментарий"
                           Margin="0,0,0,5"
                           FontSize="13"
                           FontFamily="Montserrat"
                           Foreground="DimGray"/>
                <TextBox Text="{Binding Comment}"
                         Height="80"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Style="{StaticResource WatermarkTxtBox}"
                         Tag="Комментарий"/>
            </StackPanel>
            <!--Документы-->
            <StackPanel Grid.Row="8"
                        Margin="0,0,0,20">
                <TextBlock Text="Документы"
                           Margin="0,0,0,5"
                           FontSize="13"
                           FontFamily="Montserrat"
                           Foreground="DimGray"/>
                <StackPanel  HorizontalAlignment="Center">
                    <Button DockPanel.Dock="Left"
                        Content="Выбрать файлы"
                            Width="150"
                            Height="32"
                            Command="{Binding SelectDocumentsCommand}"
                            Style="{StaticResource RoundedButton}"/>
                    <TextBlock DockPanel.Dock="Right"
                               Text="{Binding DocumentsDescription}"
                               Margin="0,10,0,0"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"
                               Foreground="{Binding IsDocumentsUploaded, Converter={StaticResource BoolToColor}}"/>
                </StackPanel>
            </StackPanel>
            <!--Сохранить-->
            <StackPanel Grid.Row="9"
                        HorizontalAlignment="Center">
                <TextBlock Text="{Binding ValidationErrorText}"
                           Margin="0,0,0,10"
                           FontSize="11"
                           Foreground="DarkRed"
                           TextAlignment="Center"
                           FontWeight="Medium"/>
                <Button Content="Сохранить"
                        Width="160"
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource RoundedButton}"
                        Foreground="WhiteSmoke"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
