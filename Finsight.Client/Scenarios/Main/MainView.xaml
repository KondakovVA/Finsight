<Window x:Class="Finsight.Client.Scenarios.Main.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:res="clr-namespace:Finsight.Client.Properties"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Finsight"
        Height="700"
        Width="1300">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/AppFrame/Styles/UIColors.xaml"/>
                <ResourceDictionary Source="/AppFrame/Styles/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid SnapsToDevicePixels="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="#282829"
                BorderThickness="0">
            <StackPanel>
                <StackPanel>
                    <Image Source="/Resources/Images/main-logo.png"
                           Height="150"/>
                </StackPanel>
                <TextBlock Margin="0,-20,0,0" 
                           Foreground="LightGray" 
                           HorizontalAlignment="Center" 
                           FontFamily="Century Gothic" 
                           Text="{x:Static res:Localization.CurrentCompanyTitle}" 
                           FontSize="24">
                </TextBlock>
                <Separator Width="220"
                           Margin="0,15,0,15"
                           Background="#7B7EA8"/>
                <ItemsControl Margin="0,5,0,0"
                              ItemsSource="{Binding MenuItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton GroupName="MenuGroup"
                                         Style="{StaticResource MenuButton}"
                                         IsChecked="{Binding IsChecked}"
                                         Command="{Binding MenuBtnPressCommand}"
                                         CommandParameter="{Binding Presenter}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:ImageAwesome Icon="{Binding MenuIcon}"
                                                     Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="{Binding Title}"
                                               Style="{StaticResource menuButtonText}"/>
                                </StackPanel>
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                BorderThickness="0"
                Background="{StaticResource MainBackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1"
                      Margin="0,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <fa:ImageAwesome Icon="{Binding Icon}"
                                          Height="20"
                                          Width="20"
                                          Foreground="{StaticResource titleColor4}"
                                          Margin="35,0,10,0"/>
                        <TextBlock Text="{Binding Caption}"
                                   Foreground="{StaticResource titleColor4}"
                                   FontSize="16"
                                   FontFamily="Montserrat"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0">
                        <Button Style="{StaticResource iconButton}"
                                Tag="{StaticResource titleColor4}">
                            <fa:ImageAwesome Icon="AngleDown"
                                              Height="12"
                                              Width="12"
                                              Style="{StaticResource iconButtonIcon}"/>
                        </Button>
                        <TextBlock Text="{Binding DisplayName}"
                                   Foreground="{StaticResource titleColor4}"
                                   FontFamily="Montserrat"
                                   FontSize="12"
                                   VerticalAlignment="Center"/>
                        <Ellipse Height="35"
                                 Width="35"
                                 Stroke="{StaticResource titleColor4}"
                                 StrokeThickness="2"
                                 Margin="10,0,10,0">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/Resources/Images/login-icon.png"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </StackPanel>
                </Grid>

                <ContentControl Grid.Row="2"
                                Margin="25"
                                Content="{Binding CurrentView}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
