<UserControl x:Class="Finsight.Client.Scenarios.Customers.Card.CustomerCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:enum="clr-namespace:Finsight.Client.Extensions"
             xmlns:controls="clr-namespace:Finsight.Client.AppFrame.CustomControls"
             xmlns:contract="clr-namespace:Finsight.Contract.Enum;assembly=Finsight.Contract"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d"
             Width="500"
             Height="480"
             d:DesignHeight="480"
             d:DesignWidth="500">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/AppFrame/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/AppFrame/Styles/TextBox.xaml"/>
                <ResourceDictionary Source="/AppFrame/Styles/TextBlock.xaml"/>
                <ResourceDictionary Source="/AppFrame/Styles/ComboBox.xaml"/>
                <ResourceDictionary Source="/AppFrame/Styles/UIColors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer Padding="15"
                  VerticalScrollBarVisibility="Auto"
                  Background="{StaticResource MainBackgroundBrush}" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--Заголовок-->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <fa:ImageAwesome Grid.Column="0"
                                 Width="34" Icon="UserPlus"
                                 VerticalAlignment="Center"
                                 Foreground="Black"
                                 Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           VerticalAlignment="Center"
                           Text="{Binding Title}"
                           Style="{StaticResource BaseTextBlock}"
                           FontSize="24"
                           FontFamily="Century Gothic"
                           TextWrapping="Wrap"/>
            </Grid>
            <!--Название компании-->
            <StackPanel Grid.Row="1" HorizontalAlignment="Stretch">
                <TextBlock FontWeight="Medium"
                           FontFamily="Montserrat"
                           Foreground="DimGray"
                           FontSize="13"
                           Text="Название компании" Margin="0,0,0,10"/>
                <TextBox 
                 Height="30"
                 HorizontalAlignment="Stretch"
                 Text="{Binding CompanyName}"
                 Style="{StaticResource WatermarkTxtBox}"/>
            </StackPanel>
            <!--Контактное лицо-->
            <StackPanel Grid.Row="2" HorizontalAlignment="Stretch">
                <TextBlock FontWeight="Medium"
               FontFamily="Montserrat"
               Foreground="DimGray"
               FontSize="13"
               Text="Контактное лицо" Margin="0,0,0,10"/>
                <TextBox Grid.Row="2"
                 Height="30"
                 HorizontalAlignment="Stretch"
                 Text="{Binding ContactName}"
                 Style="{StaticResource WatermarkTxtBox}"/>
            </StackPanel>
            <!--Email-->
            <StackPanel Grid.Row="3" HorizontalAlignment="Stretch">
                <TextBlock FontWeight="Medium"
                   FontFamily="Montserrat"
                   Foreground="DimGray"
                   FontSize="13"
                   Text="Email" Margin="0,0,0,10"/>
                <TextBox Grid.Row="3"
                 Height="30"
                 HorizontalAlignment="Stretch"
                 Text="{Binding Email}"
                 Tag="name@example.com"
                 Style="{StaticResource WatermarkTxtBox}"/>
            </StackPanel>
            <!--Номер телефона-->
            <StackPanel Grid.Row="4" HorizontalAlignment="Stretch">
                <TextBlock FontWeight="Medium"
                   FontFamily="Montserrat"
                   Foreground="DimGray"
                   FontSize="13"
                   Text="Номер телефона" Margin="0,0,0,10"/>
                <controls:MaskedTextBox Grid.Row="4"
                 Height="30"
                 HorizontalAlignment="Stretch"
                 Text="{Binding Phone}"
                 Mask="+7(000)000-00-00"
                 Tag="+7(999)999-99-99"
                 Style="{StaticResource WatermarkTxtBox}"
                 />
            </StackPanel>
            <!--Статус клиента-->
            <StackPanel Grid.Row="5" HorizontalAlignment="Stretch">
                <TextBlock FontWeight="Medium"
                   FontFamily="Montserrat"
                   Foreground="DimGray"
                   FontSize="13"
                   Text="Статус клиента" Margin="0,0,0,10"/>
                <ComboBox Grid.Row="5"
                  Grid.Column="0"
                  Height="35"
                  HorizontalAlignment="Stretch"
                  ItemsSource="{enum:EnumLocalization {x:Type contract:CustomerStatus}}"
                  SelectedValue="{Binding Status}"
                  SelectedValuePath="Value"
                  DisplayMemberPath="Display"
                  Style="{StaticResource ComboBoxCard}"/>
            </StackPanel>
            <!--Кнопка сохранить-->
            <StackPanel Grid.Row="6"
                   HorizontalAlignment="Center">
                <TextBlock 
                       Background="Transparent"
                       Text="{Binding ValidationErrorText}"
                       TextAlignment="Center"
                       FontSize="11"
                       Foreground="DarkRed"
                       FontWeight="Medium"/>
                <Button Width="150"
                    Content="Сохранить"
                    Foreground="WhiteSmoke"
                    Style="{StaticResource RoundedButton}"
                    Command="{Binding SaveCommand}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
