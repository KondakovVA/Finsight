<UserControl x:Class="Finsight.Client.Scenarios.Home.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:conv="clr-namespace:Finsight.Client.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/AppFrame/Styles/DataGrid.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <conv:EnumConverter x:Key="EnumConverter"/>
            <conv:RoleToColorConverter x:Key="RoleToColorConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--Название организации-->
            <TextBlock Grid.Row="0"
                       Text="Finsight Software Corporation"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,10"/>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                    <!--Финансы-->
                    <Border Grid.Column="0"
                            Grid.Row="0"
                            Background="White"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Финансы"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Margin="0,0,20,0">
                                    <TextBlock Text="Общий доход"
                                               Foreground="Gray"/>
                                    <TextBlock Text="{Binding TotalIncome}"
                                               FontSize="16"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                
                    <!--Заказы-->
                    <Border Grid.Row="1"
                        Background="White"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Активные заказы"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>
                            <DataGrid AutoGenerateColumns="False"
                                      Height="100"
                                      ItemsSource="{Binding Orders}"
                                      Style="{StaticResource DataGridStyle}"
                                      CellStyle="{StaticResource DataGridCellStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Клиент"
                                                        Width="*"
                                                        Binding="{Binding Customer.CompanyName}"/>
                                    <DataGridTextColumn Header="Исполнитель"
                                                        Width="*"
                                                        Binding="{Binding Executor.DisplayName}"/>
                                    <DataGridTextColumn Header="Стоимость"
                                                        Width="*"
                                                        Binding="{Binding Price}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                
                    <!--Клиенты-->
                    <Border Grid.Row="2"
                        Background="White"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16">
                        <StackPanel>
                            <TextBlock Text="Клиенты"
                                       Margin="0,0,0,10"
                                       FontSize="18"
                                       FontWeight="SemiBold"/>
                            <DataGrid AutoGenerateColumns="False"
                                      Height="100"
                                      ItemsSource="{Binding Customers}"
                                      Style="{StaticResource DataGridStyle}"
                                      CellStyle="{StaticResource DataGridCellStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Компания"
                                                        Width="*"
                                                        Binding="{Binding CompanyName}"/>
                                    <DataGridTextColumn Header="Контактное лицо"
                                                        Width="*"
                                                        Binding="{Binding ContactName}"/>
                                    <DataGridTextColumn Header="Статус"
                                                        Width="*"
                                                        Binding="{Binding Status, Converter={StaticResource EnumConverter}}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                
                    <!--Сотрудники-->
                    <Border Grid.Column="1"
                            Grid.Row="0"
                            Grid.RowSpan="2" 
                            Background="White"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16"
                            Margin="10,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                            Text="Сотрудники"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>
                        <ListBox Grid.Row="1"
                                 SelectedIndex="-1"
                                 IsEnabled="False"
                                 HorizontalContentAlignment="Stretch"
                                ItemsSource="{Binding Users}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="10"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock FontSize="13" FontWeight="SemiBold" Grid.Column="0" Text="{Binding DisplayName}" />
                                        <TextBlock FontSize="13" FontWeight="SemiBold" Grid.Column="1" Text="{Binding Role, Converter={StaticResource EnumConverter}}"
                                        Foreground="{Binding Role, Converter={StaticResource RoleToColorConverter}}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                    </Border>
                
                <!--О компании-->
                <Border Grid.Column="1"
                            Grid.Row="2"
                        Background="White"
                            BorderBrush="#DDD"
                            BorderThickness="1"
                        Margin="10,0,0,0"
                            CornerRadius="6"
                            Padding="16">
                        <StackPanel>
                            <TextBlock Text="Информация о компании"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding CompanyInfo.Address}"
                                       Foreground="Gray"/>
                            <TextBlock Text="The best software ever!"
                                       FontWeight="Bold"
                                       Foreground="DarkBlue"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CompanyInfo.Phone}"
                                       Foreground="Gray"/>
                        </StackPanel>
                    </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
