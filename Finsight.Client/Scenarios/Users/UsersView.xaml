<UserControl x:Class="Finsight.Client.Scenarios.Users.UsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cc="clr-namespace:Finsight.Client.AppFrame.CustomControls"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:res="clr-namespace:Finsight.Client.Properties"
             xmlns:conv="clr-namespace:Finsight.Client.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/AppFrame/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/AppFrame/Styles/DataGrid.xaml"/>
                <ResourceDictionary Source="/AppFrame/Styles/TextBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <conv:EnumConverter x:Key="EnumConverter"/>
            <conv:RoleToColorConverter x:Key="RoleToColorConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Margin="10">
            <Button Content="Добавить"
                    Margin="0,0,10,0"
                    Style="{StaticResource RoundedButton}"
                    Command="{Binding AddUserCommand}"/>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Top">
                <fa:ImageAwesome Icon="Search"
                                  Height="20"
                                  Width="20"
                                  Foreground="{StaticResource titleColor4}"/>
                <TextBox Tag="Поиск..."
                         Margin="5,5,0,0"
                         FontSize="13"
                         Foreground="{StaticResource titleColor4}"
                         Height="24"
                         Width="300"
                         Background="Transparent"
                         Style="{StaticResource SingleLineSearchBox}"/>
            </StackPanel>
        </StackPanel>

        <cc:ExtendedDataGrid Grid.Row="1"
                             Margin="10"
                             SnapsToDevicePixels="True"
                             ItemsSource="{Binding Users}"
                             SelectedItem="{Binding SelectedUser}"
                             EditRowCommand="{Binding EditUserCommand}"
                             DeleteRowCommand="{Binding DeleteUserCommand}"
                             AutoGenerateColumns="False"
                             Style="{StaticResource DataGridStyle}"
                             CellStyle="{StaticResource DataGridCellStyle}"
                             RowStyle="{StaticResource DataGridRowStyle}"
                             IsReadOnly="True">
            <cc:ExtendedDataGrid.Columns>
                <DataGridTextColumn Header="{x:Static res:Localization.LoginLabel}"
                                    Binding="{Binding Login}"
                                    Width="*"/>
                <DataGridTextColumn Header="Имя"
                                    Binding="{Binding DisplayName}"
                                    Width="*"/>
                <DataGridTemplateColumn Header="{x:Static res:Localization.RoleLabel}"
                                        Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Role, Converter={StaticResource EnumConverter}}"
                                       Foreground="{Binding Role, Converter={StaticResource RoleToColorConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </cc:ExtendedDataGrid.Columns>
        </cc:ExtendedDataGrid>
    </Grid>
</UserControl>
